use super::externs::(*)

use super::print::print
use super::show::show
use super::num::(*)
use super::eq::(*)

struct File
  fd :: Int64
  path :: String

impl Show File
  show f =
    "File { fd: " + show f.fd + ", path: " + f.path + " }"

impl File
  new_file p = 
    File
      fd: c_open p, 0, oct_to_dec "0777"
      path: p
  @readfile =
    let s = c_malloc 100
    let len = c_read self.fd, s, 100
    s
  @close = c_close self.fd

oct_to_dec oct = c_strtol oct, 0, 8

